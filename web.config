<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <!-- 入站規則：轉發請求到後端 -->
      <rules>
        <clear />
        <rule name="Proxy to Backend API" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="http://localhost:3000/api/{R:1}" />
        </rule>

        <rule name="Proxy to Frontend App" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="http://localhost:3001/{R:0}" />
        </rule>
      </rules>

      <!-- 出站規則：針對反向代理的回傳結果，強制移除標頭 -->
      <outboundRules>
        <!-- <rule name="Remove X-Powered-By Header" preCondition="">
          <match serverVariable="RESPONSE_X-Powered-By" pattern=".*" />
          <action type="Rewrite" value="" />
        </rule> -->
        <!-- 額外建議：也移除 Server 標頭以增加安全性 -->
        <rule name="Remove Server Header" preCondition="">
          <match serverVariable="RESPONSE_Server" pattern=".*" />
          <action type="Rewrite" value="" />
        </rule>
        <rule name="Remove X-Powered-By">
            <match serverVariable="RESPONSE_X-Powered-By" pattern=".+" />
            <action type="Rewrite" value="" />
        </rule>
    <!-- 針對已經變空白的標頭，有些 IIS 版本需要這條規則來防止它發送 -->
      </outboundRules>
    </rewrite>

    <httpProtocol>
      <customHeaders>
        <!-- 移除 IIS 靜態檔案產生的標頭 -->
        <remove name="X-Powered-By" />
        <clear /> <!-- 這會清空所有繼承的標頭 -->

      </customHeaders>
    </httpProtocol>

    <security>
      <requestFiltering removeServerHeader="true" />
    </security>
  </system.webServer>

  <system.web>
    <!-- 隱藏 ASP.NET 版本標頭 -->
    <httpRuntime enableVersionHeader="false" />
  </system.web>
</configuration>